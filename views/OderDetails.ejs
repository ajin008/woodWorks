      <div class="container">
        <div class="row mb-5">
          <div class="card-header text-center fs-4 text-dark">Your Orders</div>
          <div class="site-blocks-table">
            <table class="table">
              <thead>
                <tr>
                  <th hidden>Order ID</th>

                  <th class="product-thumbnail">Image</th>
                  <th class="product-name">Product</th>
                  <th>Quantity</th>
                  <th>Payable Amount</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% for (let i = orders.length - 1; i >= 0; i--) { %>
                <tr>
                  <td hidden><%= orders[i].orderId %></td>
                  <td hidden><%= orders[i].productId %></td>
                  <td>
                    <img
                      src="/<%= orders[i].imageUrl %>"
                      alt="Product Image"
                      style="max-width: 100px"
                      class="product-img"
                      data-orderid="<%= orders[i].orderId %>"
                    />
                  </td>
                  <td><%= orders[i].productName %></td>
                  <td><%= orders[i].quantity %></td>
                  <td><%= orders[i].discountedPrice.toFixed() %></td>
                  <td><%= orders[i].status %></td>
                  <td>
                    <button
                      class="cancel-order-btn btn btn-danger btn-sm"
                      data-orderid="<%= orders[i].orderId %>"
                    >
                      Cancel
                    </button>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
