    <script>
      $(document).ready(function () {
        $(document).on("click", ".cancel-order-btn", function (e) {
          e.preventDefault();
          var orderId = $(this).data("orderid");
          var $button = $(this); // Store reference to the clicked button

          if (confirm("Are you sure you want to cancel this order?")) {
            cancelOrder(orderId, $button); // Pass the orderId and button reference if user confirms
          }
        });

        function cancelOrder(orderId, $button) {
          $.ajax({
            type: "POST",
            url: "/Remove_OrderProduct/" + orderId,
            success: function (response) {
              console.log(response);
              // Remove the corresponding table row from the DOM
              $button.closest("tr").remove();
            },
            error: function (xhr, status, error) {
              console.error(error);
              // Optionally, handle errors and display an error message
            },
          });
        }
      });
      const productImages = document.querySelectorAll(".product-img");
      productImages.forEach((image) => {
        image.addEventListener("click", function () {
          const orderId = this.dataset.orderid; // Get order ID from data attribute
          window.location.href = `/order/details/${orderId}`; // Redirect to order details page
        });
      });
    </script>
