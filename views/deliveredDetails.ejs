    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script>
      document.querySelectorAll(".return-btn").forEach((button) => {
        button.addEventListener("click", () => {
          const orderId = button.getAttribute("data-order-id"); // Retrieve the orderId from data-order-id attribute

          // Show the offcanvas
          const offcanvas = new bootstrap.Offcanvas(
            document.getElementById("returnOffcanvas")
          );
          offcanvas.show();

          // Set the orderId in the hidden input field
          const hiddenInput = document.querySelector(
            '#returnForm input[name="orderId"]'
          );
          if (hiddenInput) {
            hiddenInput.value = orderId;
          }
        });
      });

      document.querySelectorAll(".return-cancel-btn").forEach((button) => {
        button.addEventListener("click", async () => {
          const orderId = button.getAttribute("data-order-id");

          // Ask for confirmation before canceling
          if (confirm("Are you sure you want to cancel the return order?")) {
            try {
              const response = await axios.post("/cancelReturn", { orderId });
              console.log(response.data);
              // Optionally, reload the page or update the UI as needed
            } catch (error) {
              console.error("Error canceling return order:", error);
            }
          }
        });
      });

      document.addEventListener("DOMContentLoaded", function () {
        const toastElements = document.querySelectorAll(
          ".toast-container .alert"
        );

        toastElements.forEach(function (toastElement) {
          setTimeout(function () {
            toastElement.remove();
          }, 3000); // Remove after 3 seconds
        });
      });
    </script>
