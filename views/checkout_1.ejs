  document.addEventListener("DOMContentLoaded", function() {
    
    function handleSubmit(event) {
      event.preventDefault(); 

      
      const orderType = document.querySelector('input[name="oderType"]:checked').value;

      
      const orderForm = document.getElementById('orderForm');

      
      if (orderType === 'cashOnDelivery') {
        const orderTotal = parseFloat(document.getElementById('orderTotalInput').value);
        if (orderTotal > 1000) {
           
          showErrorToast('Cash on Delivery is not available for orders above Rs 1000. Please select another payment method.');
          return;
        } else {
          
          orderForm.action = '/updateOrder'; 
          orderForm.submit(); 
        }
      }
      else if(orderType ==='wallet'){
          const walletOffcanvas = new bootstrap.Offcanvas(document.getElementById('walletOffcanvas'));
          walletOffcanvas.show();
          return;
        }
        else if (orderType === 'Online Payment') {
          
          const orderTotal = parseFloat(document.getElementById('orderTotalInput').value) * 100;
          fetch('/createRazorpayOrder', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ amount: orderTotal }), 
        })
        .then(response => response.json())
        .then(data => {
          
          const orderId = data.orderId;
          const options = {
            key: 'rzp_test_PFqhrThyTWqHJx',
            amount: orderTotal, 
            currency: 'INR',
            name: 'woodworks',
            description: 'Payment for your order',
            order_id: orderId,
            handler: function(response) {
              
              console.log('Razorpay payment successful:', response);
              
              orderForm.submit();
            },
            prefill: {
              name: 'Customer Name',
              email: 'customer@example.com',
              contact: '9876543210',
            },
            theme: {
              color: '#3399cc',
            },
          };
          const rzp = new Razorpay(options);
          rzp.open();
        })
        .catch(error => {
          console.error('Error creating Razorpay order:', error);
          document.getElementById('errorToast').textContent = 'Payment failed. Please try again later.';
          document.getElementById('errorToast').style.display = 'block';

        });
      }
    }

    
    document.getElementById('orderForm').addEventListener('submit', handleSubmit);

    document.getElementById('payNowBtn').addEventListener('click', function() {
      // Set the form action to '/placeOrder'
      const orderForm = document.getElementById('orderForm');
      const offcanvasOrderTotal = parseFloat(document.getElementById('offcanvasOrderTotal').textContent);
      const walletBalance = parseFloat(document.getElementById('walletBalance').textContent);
      

      const difference = offcanvasOrderTotal - walletBalance;
      if (walletBalance >= offcanvasOrderTotal) {
         orderForm.action = '/updateOrder';
         orderForm.submit();
      } else {
        event.preventDefault();
        alert(`Insufficient balance in your wallet. Please add ${difference} to your wallet.`);
      }

    });

  });

  
    </script>
