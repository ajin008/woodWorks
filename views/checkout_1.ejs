      $(document).ready(function() {

        var originalOrderTotal = $("#orderTotalValue").text().trim();

        $("#applyCouponBtn").click(function() {

          var couponCode = $("#c_code").val().trim();
        if (couponCode === "") {
           
            alert("Please enter a coupon code.");
            return; 
        }

          if ($(this).prop('disabled')) {
           
            showErrorToast("You have already applied a coupon code.");
            return; 
        }

    
    var couponCode = $("#c_code").val();
    var orderTotal = $("#orderTotalValue").text().trim();

    $(this).prop('disabled', true);


    $.ajax({
        type: "POST",
        url: "/applyCoupon_1",
        data: { couponCode: couponCode, orderTotal: orderTotal,couponId: $("#couponId").val(), },
        success: function(response) {
              console.log("Success response:", response);
              if (response.hasOwnProperty('totalPrice')) {
              var totalPrice = parseFloat(response.totalPrice);
              totalPrice = isNaN(totalPrice) ? 0 : totalPrice.toFixed(2);
              $("#orderTotalValue").text(totalPrice);
              $("#orderTotalInput").val(totalPrice);
              $("#offcanvasOrderTotal").text(totalPrice);

            if (response.hasOwnProperty('discountAmount')) {
              var discountAmount = parseFloat(response.discountAmount);
              discountAmount = isNaN(discountAmount) ? 0 : discountAmount.toFixed(2);
              $("#discountValue").text(discountAmount);
              $("#discountRow").show();
            }

            if (response.hasOwnProperty('couponId')) {
                var couponId = response.couponId;
                $("#couponId").val(couponId); // Set couponId value into the hidden input field
              }

              showSuccessToast("Coupon applied successfully!");
        } else if (response.error) {
            showErrorToast(response.error);
        }
      },
        error: function(xhr, status, error) {
            
            console.error("Error:", error);
            
            showErrorToast("Coupon has already been redeemed by this user OR Coupon not found");
        }
    });

    
});
      
