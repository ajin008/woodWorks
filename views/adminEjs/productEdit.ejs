    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const fileInput = document.getElementById('new-images');
        const form = document.getElementById('product-update-form');
        const previewContainer = document.getElementById('new-images-preview');
    
        fileInput.addEventListener('change', function(event) {
          previewContainer.innerHTML = ''; // Clear previous previews
          const files = event.target.files;
          Array.from(files).forEach(function(file) {
            const reader = new FileReader();
            reader.onload = function(e) {
              const img = document.createElement('img');
              img.src = e.target.result;
              img.classList.add('image-preview');
              previewContainer.appendChild(img);
            };
            reader.readAsDataURL(file);
          });
        });
    
        form.addEventListener('submit', function(event) {
          event.preventDefault(); // Prevent default form submission
          
          const formData = new FormData(form);
          const files = fileInput.files;
          Array.from(files).forEach(function(file) {
            formData.append('images', file);
          });
    
          // Send formData to backend using fetch or XHR
          fetch(form.action, {
            method: 'POST',
            body: formData
          })
          .then(function(response) {
            if (response.ok) {
              // Redirect or display success message
              window.location.href = "/productManagement";
            } else {
              throw new Error('Failed to update images');
            }
          })
          .catch(function(error) {
            console.error('Error updating product images:', error);
            // Display error message to the user
            alert('Failed to update images. Please try again later.');
          });
        });
      });
    </script>

    
