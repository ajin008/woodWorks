    <script>
      function toggleCouponStatus(couponId, isActive) {
        const newStatus = !isActive;
        fetch(`/admin/toggleCouponStatus/${couponId}`, {
          method: "PUT",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ isActive: newStatus }),
        })
          .then((response) => {
            if (response.ok) {
              window.location.reload();
            } else {
              console.error("Failed to toggle coupon status");
            }
          })
          .catch((error) =>
            console.error("Error toggling coupon status:", error)
          );
      }
      function deleteCoupon(couponId) {
        if (
          confirm("Are you sure you want to permanently delete this coupon?")
        ) {
          fetch(`/admin/deleteCoupon/${couponId}`, {
            method: "DELETE",
          })
            .then((response) => {
              if (response.ok) {
                window.location.href = "/couponManagement";
              } else {
                console.error("Failed to delete coupon");
              }
            })
            .catch((error) => console.error("Error deleting coupon:", error));
        }
      }
    </script>
