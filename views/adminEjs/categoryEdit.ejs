    <script>
      document.addEventListener("DOMContentLoaded", () => {
        document.querySelectorAll(".block-btn").forEach((btn) => {
          btn.addEventListener("click", () => {
            const userId = btn.dataset.userid;
            // Perform the block action using userId
            // After successful block action, change button text and class
            btn.textContent = "Unblock";
            btn.classList.remove("btn-primary");
            btn.classList.add("btn-success");
            btn.classList.add("unblock-btn");
            btn.classList.remove("block-btn");
          });
        });

        document.querySelectorAll(".unblock-btn").forEach((btn) => {
          btn.addEventListener("click", () => {
            const userId = btn.dataset.userid;
            // Perform the unblock action using userId
            // After successful unblock action, change button text and class
            btn.textContent = "Block";
            btn.classList.remove("btn-success");
            btn.classList.add("btn-primary");
            btn.classList.add("block-btn");
            btn.classList.remove("unblock-btn");
          });
        });
      });
    </script>

