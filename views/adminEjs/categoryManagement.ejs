      <div class="content-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex justify-content-between">
                    <h2>Category Management</h2>
                    <button
                      class="btn btn-primary"
                      onclick="window.location.href='/addCategory'"
                    >
                      Add New Category
                    </button>
                  </div>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th class="hidden">Category ID</th>
                          <th>Category Name</th>
                          <th>Number of Products</th>
                          <th>Status</th>
                          <!-- New column for status -->
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for (let i = categories.length - 1; i >= 0; i--) {
                        const category = categories[i]; %>
                        <tr>
                          <td class="hidden"><%= category._id %></td>
                          <td><%= category.name %></td>
                          <td><%= category.productCount %></td>
                          <td>
                            <%= category.isListed ? 'Active' : 'Blocked' %>
                          </td>
                          <!-- Display status dynamically -->
                          <td>
                            <a
                              href="/admin/categoryDetails/<%= category._id %>"
                              class="btn btn-info"
                              >View Details</a
                            >
                          </td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
