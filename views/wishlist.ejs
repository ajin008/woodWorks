    <!-- Add this script to your HTML file -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Add event listener to all "Remove" buttons with the class "remove-from-wishlist"
        document.querySelectorAll(".remove-from-wishlist").forEach((button) => {
          button.addEventListener("click", function () {
            // Show confirmation dialog
            if (
              confirm(
                "Are you sure you want to remove this item from your wishlist?"
              )
            ) {
              // Get the product ID from the data attribute
              const productId = this.getAttribute("data-product-id");
              // Send AJAX request to delete the product from the wishlist
              deleteFromWishlist(productId);
            }
          });
        });

        function deleteFromWishlist(productId) {
          // Send AJAX request to server
          $.ajax({
            type: "POST",
            url: "/removeFromWishlist",
            data: { productId },
            success: function (response) {
              // Update UI or perform any necessary actions upon successful deletion
              // For example, remove the corresponding row from the table
              $(`[data-product-id="${productId}"]`).closest("tr").remove();
              // Show success message
              alert("Product removed from wishlist successfully.");
            },
            error: function (error) {
              console.error("Error removing product from wishlist:", error);
              // Optionally handle error (e.g., show error message)
              alert(
                "An error occurred while removing the product from wishlist."
              );
            },
          });
        }
      });

      document.addEventListener("DOMContentLoaded", function () {
        // Add event listener to all "Add to Cart" buttons with the class "add-to-cart"
        document.querySelectorAll(".add-to-cart").forEach((button) => {
          button.addEventListener("click", function () {
            // Get the product ID from the data attribute
            const productId = this.getAttribute("data-product-id");
            // Send AJAX request to add the product to the cart
            addToCart(productId);
          });
        });

        function addToCart(productId) {
          // Send AJAX request to server
          fetch("/addToCartFromWishlist", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ productId }),
          })
            .then((response) => {
              if (response.ok) {
                // Product added successfully, redirect to the cart page
                window.location.href = "/user-cart/<%= userId %>"; // Redirect to the cart page
              } else {
                // Handle error response
                console.error(
                  "Failed to add product to cart:",
                  response.statusText
                );
              }
            })
            .catch((error) => {
              // Handle network error
              console.error("Error adding product to cart:", error);
            });
        }
      });
    </script>
